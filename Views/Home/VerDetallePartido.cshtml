@{
    ViewData["Title"] = "Detalle partido";
}
    <div class="infoGeneral">
    <img id = "img1"src="/Imagenes/@ViewBag.DatosPartido.Logo" alt="">
    <p><a href="@ViewBag.DatosPartido.SitioWeb">Pagina JXC</a></p>
    <h2>Fecha de fundacion: @ViewBag.DatosPartido.FechaFundacion</h2>
    <h2>Cantidad de diputados: @ViewBag.DatosPartido.CantidadDiputados</h2>
    <h2>Cantodad de senadores: @ViewBag.DatosPartido.CantidadSenadores</h2>
    </div>
    <div class="text-center">
    <p>Candidatos</p>
    </div>
    <div class="CandidatoCuadro">
    @foreach (Candidato item in ViewBag.ListaCandidatos)
    {
    <div class="Candidatomod">
    <img src="@item.Foto" alt="">
    <p>@item.Apellido</p>
    <p>@item.Nombre</p>    
    <a href='@Url.Action("EliminarCandidato", new { idPartido = item.IdPartido, idCandidato = item.IdCandidato })' ><input class="elim" type="button" value="Eliminar Candidato"></input></a><br>
    <a href='@Url.Action("VerDetalleCandidato", new { idCandidato = item.IdCandidato})'><input class="Sabermas" type="button" value="Saber mas del candidato"></input></a>
    </div>
    }
    </div>
    <div class="botonUltimo">
    <a href='@Url.Action("AgregarCandidato", new { idPartido = @ViewBag.DatosPartido.IdPartido })'><input class="Agreg" type="button" value="Agregar Candidato"></input></a>
    </div>

